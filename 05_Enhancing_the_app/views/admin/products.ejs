<%- include('../includes/header.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/product.css">
</head>
    <body>
        <%- include('../includes/navigation.ejs') %>
        <main>
            <h1>My Products</h1>
            <p>List of all the products...</p>
            <% if(prods.length>0){ %>
            <div class="grid">
                <% for (let product of prods){ %>
                <article class="card product-item">
                    <header class="card__header">
                        <h1 class="product__title"><%= product.titleName %></h1>
                    </header>
                    <div class="card__image">
                        <img  src="<%= product.imageUrlName %>" alt="<%= product.titleName %>">
                    </div>
                    <div class="card__content">
                        <h2 class="product__price"> $<%= product.priceNumber %></h2>
                        <p class="product__description"><%= product.descriptionDetails %></p>
                    </div>
                    <div class="card__actions">
                        <a href="/admin/edit-product" class="btn">Edit</a>
                        <form action="/admin/delete-product" action="POST">
                            <button class="btn" type="submit">Delete</button>
                        </form>
                    </div>
                </article>
            </div>
            <% } %>
            <% } else {%>
                <h1>No Products Found</h1>
            <% } %>
        </main>
    <%- include('../includes/footer.ejs') %>